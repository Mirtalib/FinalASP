@model Projecttask.Models.ViewModels.ResetPasswordViewModel

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger" role="alert">
        @foreach (var key in ViewData.ModelState.Keys)
        {
            foreach (var error in ViewData.ModelState[key].Errors)
            {
                <span>@error.ErrorMessage</span>
                <br />
            }
        }
    </div>
}

<style>
    body {
        background-color: #f0f0f0; /* Arka plan rengi */
        color: #333; /* Genel metin rengi */
    }

    .container {
        background-color: #fff; /* Container arka plan rengi */
        border-radius: 10px; /* Kenar yuvarlama */
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2); /* Gölge efekti */
        padding: 20px; /* İç içe boşluk */
    }

    .form-group {
        margin-bottom: 15px; /* Form grupları arasında boşluk */
    }

    h1 {
        color: #ff0000; /* Başlık rengi (kırmızı) */
        text-align: center;
    }

    .form-control {
        border: 2px solid #ff0000; /* Form alanı çerçeve rengi (kırmızı) */
        color: #333; /* Form alanı metin rengi (siyah) */
    }

    label {
        color: #333; /* Etiket metin rengi (siyah) */
    }

    .btn-primary {
        background-color: #ff0000; /* Ana düğme rengi (kırmızı) */
        border-color: #ff0000; /* Ana düğme çerçeve rengi (kırmızı) */
        color: #fff; /* Ana düğme metin rengi (beyaz) */
    }
</style>

<div class="container">
    <h1 class="h3 mb-3 fw-normal">Reset Password</h1>
    <form asp-controller="Account" asp-action="ResetPass" method="post">
        <input type="hidden" asp-for="Email" />
        <input type="hidden" asp-for="Token" />
        <div class="form-group">
            <label for="Password">Password</label>
            <input type="password" class="form-control" id="Password" name="Password" asp-for="Password" required>
        </div>
        <div class="form-group">
            <label for="ConfirmPassword">Confirm New Password</label>
            <input type="password" class="form-control" id="ConfirmPassword" asp-for="ConfirmPassword" name="ConfirmPassword" required>
        </div>
        <button type="submit" class="btn btn-primary">Reset Your Password</button>
    </form>
</div>
